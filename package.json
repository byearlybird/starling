{
	"name": "@byearlybird/starling-repo",
	"version": "0.0.0",
	"type": "module",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "bun run build:core && bun run build:store && bun run build:plugins-push-pull && bun run build:plugins-unstorage",
		"build:core": "cd packages/core && bunx tsdown",
		"build:store": "cd packages/store && bunx tsdown",
		"build:plugins-push-pull": "cd packages/plugins/push-pull && bunx tsdown",
		"build:plugins-unstorage": "cd packages/plugins/unstorage && bunx tsdown",
		"prepublishOnly": "bun run build"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.5",
		"@types/bun": "latest",
		"mitata": "^1.0.34",
		"tinybench": "^5.0.1",
		"tsdown": "^0.15.9",
		"typescript": "^5"
	}
}
