{
	"name": "@byearlybird/starling-repo",
	"version": "0.0.0",
	"type": "module",
	"private": true,
	"license": "MIT",
	"workspaces": [
		"apps/**",
		"packages/**"
	],
	"scripts": {
		"init:container": "npm install -g bun",
		"build:all": "bun run build:core && bun run build:db",
		"build:core": "cd packages/core && bun run build.ts",
		"build:db": "cd packages/db && bun run build.ts",
		"bench": "cd packages/core && bun run bench.ts",
		"demo:react": "bun scripts/demo-react.ts",
		"version:core:patch": "cd packages/core && bun pm version patch",
		"version:core:minor": "cd packages/core && bun pm version minor",
		"version:db:patch": "cd packages/db && bun pm version patch",
		"version:db:minor": "cd packages/db && bun pm version minor",
		"publish:core": "cd packages/core && bun publish --access public",
		"publish:db": "cd packages/db && bun publish --access public"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.5",
		"@types/bun": "latest",
		"fake-indexeddb": "^6.2.5",
		"mitata": "^1.0.34",
		"tsdown": "^0.15.9",
		"typescript": "^5",
		"unstorage": "^1.17.2"
	}
}
