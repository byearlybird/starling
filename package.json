{
	"name": "@byearlybird/starling-repo",
	"version": "0.0.0",
	"type": "module",
	"private": true,
	"license": "MIT",
	"workspaces": [
		"apps/**",
		"packages/**"
	],
	"scripts": {
		"init:container": "npm install -g bun",
		"build": "cd packages/starling && bun run build",
		"demo:react": "bun scripts/demo-react.ts",
		"version:patch": "cd packages/starling && bun pm version patch",
		"version:minor": "cd packages/starling && bun pm version minor",
		"version:major": "cd packages/starling && bun pm version major",
		"publish": "cd packages/starling && bun publish --access public"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.5",
		"@types/bun": "latest",
		"fake-indexeddb": "^6.2.5",
		"mitata": "^1.0.34",
		"tsdown": "^0.15.9",
		"typescript": "^5",
		"unstorage": "^1.17.2"
	}
}
