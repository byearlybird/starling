{
	"name": "@byearlybird/starling",
	"version": "0.1.2",
	"type": "module",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "bun run build:core && bun run build:plugins",
		"build:core": "cd packages/core && bunx tsdown",
		"build:plugins": "cd packages/plugins && bunx tsdown",
		"prepublishOnly": "bun run build"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.5",
		"@types/bun": "latest",
		"mitata": "^1.0.34",
		"tinybench": "^5.0.1",
		"tsdown": "^0.15.9",
		"typescript": "^5"
	}
}
